onStart => {
	for {
		play clap, &PlayOptions{Action: ActionLoopContinuePlay,Wait:false}
	}
}

onClick => {
	quote "m"
	step 100
	step -100
	turn -360
	quote ""
	broadcast "quote"
}

onKey KeyQ, => {
	quote "m", "monkey", 1
}
onKey KeyW, => {
	play clap
}

onKey KeyA, => {
	play clap, &PlayOptions{Action: ActionStop}
}

onKey KeyB, => {
	play clap, &PlayOptions{Action: ActionResume}
}
