var (
	movnum int
)
onClick => {
	animate "clap"
}

onKey KeySpace, => {
	Game.Camera.On("Monkey")
}
onKey KeyB, => {
	step 10
}
onKey KeyUp, => {
	x,y := Game.Camera.GetXY()
	y = y + 5.0
	Game.Camera.SetXY(x,y)
}

onKey KeyDown, => {
	x,y := Game.Camera.GetXY()
	y = y - 5.0
	Game.Camera.SetXY(x,y)
}

onKey KeyLeft, => {
	x,y := Game.Camera.GetXY()
	x = x - 5.0
	Game.Camera.SetXY(x,y)
}

onKey KeyRight, => {
	x,y := Game.Camera.GetXY()
	x = x + 5.0
	Game.Camera.SetXY(x,y)
}


onMoving mi => {

}

onTurning ti=> {
	Crocodile.SetHeading ti.newDir
}
