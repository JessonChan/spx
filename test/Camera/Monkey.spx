onClick => {
	animate "clap"
}

onKey KeySpace, => {
	println "onKeySpace"
	Camera.on Monkey
}

onKey KeyEnter, => {
	println "onKeyEnter"
	Camera.on "Monkey"
}

onKey KeyB, => {
	println "onKeyB"
	step 10
}

onKey KeyE, => {
	println "onKeyE"
	Camera.setXYpos 0, 0
}

onKey KeyUp, => {
	Camera.changeXYpos 0, 5
}

onKey KeyDown, => {
	Camera.changeXYpos 0, -5
}

onKey KeyLeft, => {
	Camera.changeXYpos -5, 0
}

onKey KeyRight, => {
	Camera.changeXYpos 5, 0
}

onTurning ti => {
	Crocodile.setHeading ti.newDir
}
