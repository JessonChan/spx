var (
	movnum int
)
onClick => {
	animate "clap"
}

onKey KeySpace, => {
	println width, height
	animate "think"
}

onKey KeyC, => {
	turn 45
}

onKey KeyE, => {
	step 5
	println distanceStepTo("Crocodile")
}
onKey KeyF, => {
	step 5, "animstep"
	println distanceStepTo("Crocodile")
}
onKey KeyG, => {
	step -5, "slowstep"
	println distanceStepTo("Crocodile")
}

onMoving mi => {
	
}

onTurning ti=> {
	Crocodile.SetHeading ti.newDir
}


onKey KeyUp, => {
	x,y := Game.Camera.GetXY()
	y = y + 5.0
	Game.Camera.SetXY(x,y)
}

onKey KeyDown, => {
	x,y := Game.Camera.GetXY()
	y = y - 5.0
	Game.Camera.SetXY(x,y)
}

onKey KeyLeft, => {
	x,y := Game.Camera.GetXY()
	x = x - 5.0
	Game.Camera.SetXY(x,y)
}

onKey KeyRight, => {
	x,y := Game.Camera.GetXY()
	x = x + 5.0
	Game.Camera.SetXY(x,y)
}
